            var xhr = new XMLHttpRequest();

            function login() {

                var user = document.getElementById("user").innerHTML;
                var pw = document.getElementById("pw").innerHTML;

                xhr.open("GET", "/login?user="+user+"&pw="+pw, true);
                xhr.send();

            }

