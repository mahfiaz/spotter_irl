        <script type="text/javascript">
            
            var xhr = new XMLHttpRequest();

            if(window.location.href != "http://localhost:5000/spawn") {
                window.location.assign("/spawn");
            }

            function newRound() {

                var name = prompt("Name of the round");
                var length = prompt("Lenght of round in minutes(integer)");
                var startsIn = prompt("Time to start of round in minutes(integer)");
                // 3 because Estonian summertime is GMT +3
                var roundStartTime = new Date((3600000 * 3 + new Date().getTime()) + (startsIn * 60 * 1000))
                var correct = confirm("Do you wish to add round:" + name + ", duration:" + length + ", starting at:" + roundStartTime);
                if(correct) {
                    xhr.open("GET", "addRound?roundName=" + name + "&roundLength=" + length + "&startsIn=" + startsIn, true);
                    xhr.send();
                    //So you won't have to refresh the page manually
                    window.setTimeout(function() {}, 500);
                    window.location.assign(window.location.href);
                }

            }

            function masterLogout() {
                xhr.open("GET", "/masterout", true);
                xhr.send();
                xhr.onreadystatechange = function() {
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        console.log(xhr.responseText)
                        window.location.assign("/masterlogin")
                    }
                }
            }

        </script>

       

